<root main_tree_to_execute="BehaviorTree">
    <BehaviorTree ID="BehaviorTree">
        <!-- Every Sequence and Fallback is considered Reactive from AS2FM -->
        <Sequence>
            <!-- ///// SubTree BatteryManagment ///// -->
            <Fallback>
                <Condition ID="ROS2Condition" name="BatteryLevel" service_name="/BatteryLevelSkill/tick"/>
                <Action ID="ROS2Action" name="Alarm" service_name="/AlarmSkill/tick"/>
            </Fallback>
            <!-- ///// SubTree PoiScheduler ///// -->
            <Fallback>
                <Sequence>
                    <Inverter>
                        <Condition ID="ROS2Condition" name="IsPoiDone1" service_name="/IsPoiDone1Skill/tick"/>
                    </Inverter>
                    <Action ID="ROS2Action" name="SetPoi1" service_name="/SetPoi1Skill/tick"/>
                </Sequence>
                <Sequence>
                    <Inverter>
                        <Condition ID="ROS2Condition" name="IsPoiDone2" service_name="/IsPoiDone2Skill/tick"/>
                    </Inverter>
                    <Action ID="ROS2Action" name="SetPoi2" service_name="/SetPoi2Skill/tick"/>
                </Sequence>
                <Action ID="ROS2Action" name="Reset" service_name="/Reset/tick"/>
            </Fallback>
            <!-- ///// SubTree Navigation ///// -->
            <Sequence>
                <Fallback>
                    <Condition ID="ROS2Condition" name="VisitorsFollowingRobot" service_name="/VisitorsFollowingRobot/tick"/>
                    <Action ID="ROS2Action" name="Wait" service_name="/Wait/tick"/>
                </Fallback>
                <Action ID="ROS2Action" name="GoToPoiAction" service_name="/GoToPoiAction/tick"/>
                <Action ID="ROS2Action" name="SetCurrentPoiDone" service_name="/SetCurrentPoiDone/tick"/>
            </Sequence>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
</root>
