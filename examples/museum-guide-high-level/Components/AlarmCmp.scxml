<scxml
  version="1.0"
  xmlns="..."
  datamodel="ecmascript"
  name="AlarmCmp"
  initial="alarm">

  <ros_async_service_server id="/AlarmCmp/sendAlarm" />

  <state id="alarm">
    <ros_async_service_handle_request id="/AlarmCmp/sendAlarm" target="alarm">
      <ros_async_service_send_response id="/AlarmCmp/sendAlarm"/>
      <log expr="'Alarm sent!'"/>
    </ros_async_service_handle_request>
  </state>
</scxml>
